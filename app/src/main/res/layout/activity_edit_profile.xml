<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EditProfile">

    <TextView
        android:id="@+id/edit_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Change "
        android:textColor="@color/colorPrimary"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/change_name_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_title">

        <EditText
            android:id="@+id/current_name"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:background="@drawable/reg_edittext_style"
            android:ems="10"
            android:hint="Current name"
            android:inputType="none" />

        <EditText
            android:id="@+id/new_name"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/reg_edittext_style"
            android:ems="10"
            android:hint="New name"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/change_name_btn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@drawable/reg_btn_style"
            android:text="Change Name"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_password_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_title">

        <EditText
            android:id="@+id/current_password"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:background="@drawable/reg_edittext_style"
            android:ems="10"
            android:hint="Current Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/reg_edittext_style"
            android:ems="10"
            android:hint="New Password"
            android:inputType="textVisiblePassword" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/reg_edittext_style"
            android:ems="10"
            android:hint="Retype new password"
            android:inputType="textVisiblePassword" />

        <Button
            android:id="@+id/change_password_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@drawable/reg_btn_style"
            android:text="Change Password"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Forgot password?  Reset via e-mail"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_btn"
            app:layout_constraintVertical_bias="0.32" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_email_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_title">

        <EditText
            android:id="@+id/current_email"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:background="@drawable/reg_edittext_style"
            android:ems="10"
            android:hint="Current Email"
            android:inputType="none" />

        <EditText
            android:id="@+id/new_email"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/reg_edittext_style"
            android:ems="10"
            android:hint="New Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/confirm_password_email"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/reg_edittext_style"
            android:ems="10"
            android:hint="Current Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/change_email_btn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@drawable/reg_btn_style"
            android:text="Change Email"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_profile_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_title">

        <EditText
            android:id="@+id/confirm_password_delete_profile"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/reg_edittext_style"
            android:ems="10"
            android:hint="Current Password"
            android:inputType="textPassword"  />

        <Button
            android:id="@+id/delete_profile_btn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@drawable/reg_btn_style"
            android:text="Delete profile"
            android:textColor="#ffffff" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>